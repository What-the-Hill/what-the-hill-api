generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bill {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  updatedBy String

  detail    String?
  links     String[]
  name      String?
  number    String
  ranking   Int
  sponsor   Legislator @relation(fields: [sponsorId], references: [id])
  sponsorId String
  status    Status     @relation(fields: [statusId], references: [id])
  statusId  String
  stage     Stage      @relation(fields: [stageId], references: [id])
  stageId   String
  summary   String?
  title     String
}

model Legislator {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  updatedBy String

  bills Bill[]
  name  String
}

model Stage {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  updatedBy String

  name String
  Bill Bill[]
}

model Status {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  updatedBy String

  color String
  name  String
  Bill  Bill[]
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  updatedBy String

  email        String @unique
  name         String
  passwordHash String
}
